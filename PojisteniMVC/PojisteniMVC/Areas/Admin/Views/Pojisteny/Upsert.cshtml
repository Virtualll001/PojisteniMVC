@model PojisteniMVC.Models.Pojisteny
<!--vychází return (u dané metody v Controlleru) - co vrací?!-->
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Vytvořit záznam";
    ViewData["Title"] = title;
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.PojistenyId != 0)
        {
            title = "Upravit záznam";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Jmeno"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Jmeno" class="form-control" />
                    <span asp-validation-for="Jmeno" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Prijmeni"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Prijmeni" class="form-control" />
                    <span asp-validation-for="Prijmeni" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Adresa"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Adresa" class="form-control" />
                    <span asp-validation-for="Adresa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.PojistenyId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.PojistenyId" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
